@model List<BookDTO>

@foreach (var book in Model)
{
    <tr>
        <td>@book.Title</td>
        <td>@book.Author</td>
        <td>@book.ISBN</td>
        <td>@book.Publisher</td>
        <td>
            <div id="bookStatus">
                <span>@book.LastStatus.Status.ToUIString()</span>
                @if (book.LastStatus.Equals(BookStatusEnum.InLibrary))
                {
                    <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="modal" data-target="#lendItModal">Lend It</button>

                    <div class="modal fade" id="lendItModal" tabindex="-1" role="dialog" aria-labelledby="lendItModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="lendItModalLabel">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    ...
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (book.LastStatus.Equals(BookStatusEnum.OutLibrary))
                {
                    <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="modal" data-target="#lendingDetailsModal">Lending Details</button>

                    <div class="modal fade" id="lendingDetailsModal" tabindex="-1" role="dialog" aria-labelledby="lendingDetailsModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="lendingDetailsModalLabel">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    ...
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </td>
    </tr>
}